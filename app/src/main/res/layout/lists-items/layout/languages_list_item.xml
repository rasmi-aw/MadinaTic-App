<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_very_small"
    android:background="@drawable/small_list_item_background"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/language_icon"
        android:layout_width="@dimen/image_extra_extra_small"
        android:layout_height="@dimen/image_extra_extra_small"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:src="@drawable/algeria_flag" />

    <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/image_extra_extra_small"
        android:layout_weight="1"
        android:src="@drawable/algeria_flag" />

    <TextView
        android:id="@+id/language_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:text="Title"
        android:textDirection="locale"
        android:textSize="@dimen/super_text"
        android:textStyle="bold" />

</LinearLayout>