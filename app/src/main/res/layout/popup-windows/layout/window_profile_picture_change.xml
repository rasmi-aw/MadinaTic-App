<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/window_background"
        android:gravity="center"
        android:orientation="vertical">
        <!--Profile picture-->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/profile_picture_title"
                style="@style/SmallTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginStart="@dimen/margin_very_small"
                android:layout_marginLeft="@dimen/margin_very_small"
                android:text="@string/profile_picture" />


            <ImageView
                android:id="@+id/take_photo"
                android:layout_width="@dimen/image_extra_extra_small"
                android:layout_height="@dimen/image_extra_extra_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:background="@drawable/circle_pink"
                android:padding="@dimen/margin_extra_small"
                android:src="@drawable/camera_filled" />

            <ImageView
                android:id="@+id/select_photo"
                android:layout_width="@dimen/image_extra_extra_small"
                android:layout_height="@dimen/image_extra_extra_small"
                android:layout_marginStart="@dimen/margin_very_small"
                android:layout_marginLeft="@dimen/margin_very_small"
                android:background="@drawable/circle_transparent_black"
                android:padding="@dimen/margin_extra_small"
                android:tint="@color/white"
                android:src="@drawable/select_photo_filled" />

        </LinearLayout>


        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="@dimen/image_extra_large"
            android:layout_height="@dimen/image_extra_large"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/circle_gray"
            android:padding="@dimen/margin_extra_small"
            android:scaleType="centerCrop" />


        <LinearLayout
            android:id="@+id/profile_picture_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_very_small"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/light_gray_circle"
                    android:layout_width="@dimen/image_extra_small"
                    android:layout_height="@dimen/image_extra_small"
                    android:layout_marginRight="@dimen/margin_very_small"
                    android:background="@drawable/circle_light_gray" />

                <ImageView
                    android:id="@+id/pink_circle"
                    android:layout_width="@dimen/image_extra_small"
                    android:layout_height="@dimen/image_extra_small"
                    android:layout_marginRight="@dimen/margin_very_small"
                    android:background="@drawable/circle_pink" />


                <ImageView
                    android:id="@+id/blue_gray_circle"
                    android:layout_width="@dimen/image_extra_small"
                    android:layout_height="@dimen/image_extra_small"
                    android:layout_marginRight="@dimen/margin_very_small"
                    android:background="@drawable/circle_blue_gray" />

                <ImageView
                    android:id="@+id/mauve_circle"
                    android:layout_width="@dimen/image_extra_small"
                    android:layout_height="@dimen/image_extra_small"
                    android:layout_marginRight="@dimen/margin_very_small"
                    android:background="@drawable/circle_mauve" />


                <ImageView
                    android:id="@+id/black_circle"
                    android:layout_width="@dimen/image_extra_small"
                    android:layout_height="@dimen/image_extra_small"
                    android:layout_marginRight="@dimen/margin_very_small"
                    android:background="@drawable/circle_black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/red_circle"
                    android:layout_width="@dimen/image_extra_small"
                    android:layout_height="@dimen/image_extra_small"
                    android:layout_marginRight="@dimen/margin_very_small"
                    android:background="@drawable/circle_red" />

                <ImageView
                    android:id="@+id/blue_circle"
                    android:layout_width="@dimen/image_extra_small"
                    android:layout_height="@dimen/image_extra_small"
                    android:layout_marginRight="@dimen/margin_very_small"
                    android:background="@drawable/circle_blue" />

                <ImageView
                    android:id="@+id/orange_circle"
                    android:layout_width="@dimen/image_extra_small"
                    android:layout_height="@dimen/image_extra_small"
                    android:layout_marginRight="@dimen/margin_very_small"
                    android:background="@drawable/circle_orange" />

                <ImageView
                    android:id="@+id/gray_circle"
                    android:layout_width="@dimen/image_extra_small"
                    android:layout_height="@dimen/image_extra_small"
                    android:layout_marginRight="@dimen/margin_very_small"
                    android:background="@drawable/circle_gray" />

                <ImageView
                    android:id="@+id/green_circle"
                    android:layout_width="@dimen/image_extra_small"
                    android:layout_height="@dimen/image_extra_small"
                    android:layout_marginRight="@dimen/margin_very_small"
                    android:background="@drawable/circle_green" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:gravity="center_vertical"
            android:layoutDirection="ltr"
            android:orientation="horizontal">

            <Button
                android:id="@+id/save"
                android:layout_width="0dp"
                android:layout_height="@dimen/image_extra_extra_small"
                android:layout_marginEnd="@dimen/margin_very_small"
                android:layout_marginRight="@dimen/margin_very_small"
                android:layout_weight="1"
                android:background="@drawable/rectangle_rounded_green"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/cancel"
                style="@style/NegativeButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/cancel" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>